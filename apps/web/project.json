{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": [
    "scope:web"
  ],
  "// targets": "to see all targets run: nx show project web --web",
  "targets": {
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web:build",
        "dev": true,
        "port": 2000
      },
      "configurations": {
        "development": {
          "buildTarget": "web:build:development",
          "dev": true,
          "port": 2000
        },
        "production": {
          "buildTarget": "web:build:production",
          "dev": false,
          "port": 2000
        }
      }
    },
    "serve-development": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web:build",
        "dev": true,
        "port": 2000
      },
      "configurations": {
        "development": {
          "buildTarget": "web:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "web:build:production",
          "dev": false
        }
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web",
        "outputHashing": "all"
      },
      "configurations": {
        "development": {
          "outputPath": "dist/apps/web",
          "outputHashing": "none"
        },
        "production": {
          "outputPath": "dist/apps/web",
          "outputHashing": "all"
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": [
        "build"
      ],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/web/package.json",
        "{workspaceRoot}/dist/apps/web/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": [
        "build"
      ],
      "cache": true,
      "outputs": [
        "{workspaceRoot}/dist/apps/web/workspace_modules"
      ],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": [
        "prune-lockfile",
        "copy-workspace-modules"
      ],
      "executor": "nx:noop"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/web/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/web/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/web/cypress.config.ts",
        "devServerTarget": "web:serve-development",
        "baseUrl": "http://localhost:3000"
      },
      "configurations": {
        "development": {
          "devServerTarget": "web:serve-development"
        },
        "production": {
          "devServerTarget": "web:serve-production"
        }
      }
    },
    "e2e:ci": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/web/cypress.config.ts",
        "devServerTarget": "web:serve-production",
        "baseUrl": "http://localhost:3000"
      },
      "configurations": {
        "development": {
          "devServerTarget": "web:serve-development"
        },
        "production": {
          "devServerTarget": "web:serve-production"
        }
      }
    }
  }
}